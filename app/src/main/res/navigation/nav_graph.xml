<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.crazy_habits.fragments.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_habitEditFragment"
            app:destination="@id/habitEditFragment"
            app:popUpTo="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitEditFragment"
        android:name="com.example.crazy_habits.fragments.HabitEditFragment"
        android:label="fragment_habit_edit"
        tools:layout="@layout/fragment_habit_edit" >
        <action
            android:id="@+id/action_habitEditFragment_to_colorHabitFragment"
            app:destination="@id/colorHabitFragment" />
        <action
            android:id="@+id/action_habitEditFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.crazy_habits.fragments.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_habitEditFragment"
            app:destination="@id/habitEditFragment"
            app:popUpTo="@id/viewPagerFragment" />
        <argument
            android:name="result"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/colorHabitFragment"
        android:name="com.example.crazy_habits.fragments.ColorHabitFragment"
        android:label="fragment_color_habit"
        tools:layout="@layout/fragment_color_habit" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.crazy_habits.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment2"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action android:id="@+id/action_global_infoFragment" app:destination="@id/infoFragment" />
</navigation>