<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InfoFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/Application_info"
        android:textColor="@color/black"
        android:textSize="@dimen/bigText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This test app is created to take control over your habits."
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gl and hf!"
        android:layout_margin="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/cat4"
        android:contentDescription="@string/ragdoll_cat"
        android:paddingStart="50dp"
        android:paddingEnd="-16dp"
        android:layout_marginStart="100dp"
        android:layout_gravity="end"/>


</LinearLayout>